<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for MoneyBear app.
   Configures what data is included in cloud backup and device transfer.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include Room database files for cloud backup -->
        <include domain="database" path="."/>
        
        <!-- Include DataStore preferences for cloud backup -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include files directory if needed -->
        <include domain="file" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include Room database files for device transfer -->
        <include domain="database" path="."/>
        
        <!-- Include DataStore preferences for device transfer -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include files directory if needed -->
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>